    <macrodef name="checksums-mvn" description="only md5 and sha1 are needed for the maven directory structure">
        <element name="resourcesmvn" implicit="true"/>
        <sequential>
            <checksum algorithm="md5">
                <resourcesmvn/>
            </checksum>
            <checksum algorithm="sha1">
                <resourcesmvn/>
            </checksum>
        </sequential>
    </macrodef>
    <macrodef name="checksums">
        <element name="resources" implicit="true"/>
        <sequential>
            <checksums-mvn>
            	<resources/>
            </checksums-mvn>
            <checksum fileext=".sha512" algorithm="sha-512">
                <resources/>
            </checksum>
        </sequential>
    </macrodef>

    <target name="checksums">
        <checksums>
            <fileset dir="out/">
				<exclude name="**/*.asc"/>
				<exclude name="**/*.md5"/>
				<exclude name="**/*.sha1"/>
				<exclude name="**/*.sha512"/>
			</fileset>
        </checksums>
    </target>
